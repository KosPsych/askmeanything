img(src='logo.png' alt='Logo' class='logo-image' onclick="window.location.replace('/')")
style
 include ../public/create_question.css
div.upper-div
  div.div-title Ask a new question!
  div.usr
    h4 You are logged in as:
    h4=name

div.ask Ask a question and wait for the answers!


block content
    
    div.text-center
        form(class="form-signin" method="POST" action="/create_question")

            div.form-group
              label( for="inputTitle" class="sr-only") Question Title
              input(type="text" name="title" id="inputTitle" class="form-control" placeholder="Title" required autofocus)

            div.form-group
              label(for="inputQuestion" class="sr-only") Question Text
              input(type="text" name="question_text" id="inputQuestion" rows="1" cols="50" class="form-control" placeholder="Question Text" required)

            div.form-group
              label(for="inputkeywords" class="sr-only") Keywords
              input(type="text" name="keywords" id="inputkeywords" class="form-control" placeholder="Keywords separated by comma" required)

            div.form-actions
              input.btn.btn-primary(type='submit', value='Submit')
              input.btn.btn-cancel(class="button" type="button" onclick="window.location.replace('/')" value="Cancel") 
h1= status      

link(rel='stylesheet', href='/create_question.css', type='text/css')