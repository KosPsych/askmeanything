include navbar.pug
img(src='logo.png' alt='Logo' class='logo-image' onclick="window.location.replace('/')")
div.upper-div
  div.div-title Edit question!
  div.usr
    h4 You are logged in as:
    h4=name




block content
    
    div.text-center
        form(class="form-signin" method="POST" action="/edit_question")

            

            div.form-group
              label(for="inputQuestion" class="sr-only") Question Text
              input(type="text"  value=question_body name="question_text" id="inputQuestion" rows="1" cols="50" class="form-control" placeholder="Question Text" required)

            div.form-group
              label(for="inputkeywords" class="sr-only") Keywords
              input(type="text" name="keywords"  value=keywords id="inputkeywords" class="form-control" placeholder="Keywords separated by comma" required)
            div.form-group
              input(type="hidden" name="question_title" value=title)
            div.form-actions
              input.btn.btn-primary(type='submit', value='Submit edit')
              input.btn.btn-cancel(class="button" type="button" onclick="window.location.replace('/')" value="Cancel") 
h1= status      

link(rel='stylesheet', href='/create_question.css', type='text/css')
