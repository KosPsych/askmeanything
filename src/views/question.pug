div.div-title Answer the question below!
h1 askmeanything

include navbar.pug
+login(loggedin,name)

div.answer-body

  div.question-group
    h2= "Question Title: "+question.title
    p= "Question: "+question.question_text
    p= "Date Asked: " +question.question_date
    p= "Keywords: " +question.keywords
    p= "Asked by: " +question.asked_by

  div.answer-group
    h2  Answers
    each val in answers
      p= " "+val.answer_text
      p="Answered by : "+val.answered_by
      p="Date Answered: "+val.answer_date


  block content    
  h3(style={margin:"80px"}) Answer this question 
    div.text-center
      form(class="form-signin" method="POST" action="/answer")
          div.form-group
              input(type="text" name="answer_text" id="inputAnswer" class="form-control" placeholder="Write your answer here" required autofocus)
              input(type="hidden" name="question_title" value=question.title)
              input(type="hidden" name="question_user" value=question.asked_by)
          
          div.form-actions
              input.btn(type='submit', value='Submit')
              input.btn.btn-cancel(class="button" type="button" onclick="window.location.replace('/')" value="Cancel")

link(rel='stylesheet', href='/question.css', type='text/css')