
block content
    h1 askmeanything
    h2 sign up
    div.text-center
        form(class="form-signin" method="POST" action="/signup")
            div.form-group
              label( for="inputUsername" class="sr-only") Name
              input(type="name" name="name" id="inputname" class="form-control" placeholder="name..." required autofocus)
            
            div.form-group
              label( for="inputUsername" class="sr-only") Surname
              input(type="surname" name="surname" id="inputsurname" class="form-control" placeholder="surname..." required autofocus)

            div.form-group
              label( for="inputUsername" class="sr-only") Username
              input(type="username" name="username" id="inputUsername" class="form-control" placeholder="username..." required autofocus)

            div.form-group
              label(for="inputPassword" class="sr-only") E-mail
              input(type="email" name="email" id="inputemail" class="form-control" placeholder="e-mail..." required)  

            div.form-group
              label(for="inputPassword" class="sr-only") Password
              input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password..." required)

            div.form-actions
              input.btn.btn-primary(type='submit', value='Sign up')
h1= status      